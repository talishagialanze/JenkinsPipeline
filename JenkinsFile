pipeline{
    agent any
    environment{
        DIRECTORY_PATH= "the path of the code directory being fetched"
        TESTING_ENVIRONMENT= "the name of the testing environment"
        PRODUCTION_ENVIRONMENT= "talisha"
    }
    stages
    {
        stage('Build'){
            steps{
                echo "fetch the source code from the $DIRECTORY_PATH that has been specified in the $TESTING_ENVIRONMENT"
                echo "compile the code and generate any necessary artifacts"
            }
        }


        stage('Test')
        {
            steps{
                 echo "unit tests completed"
                 echo "integration tests completed"
            }
        }

        stage('Code quality check')
        {
            steps{
                echo "check the quality of the code implemented"
            }
            
        }

        stage('Deploy')
        {
            steps{
                echo "the application is going to be deployed to the $TESTING_ENVIRONMENT as shown in the environment variable $PRODUCTION_ENVIRONMENT"
            }
        }

        stage('Approval')
        {
            steps{
                sleep 10
            }
        }

        stage('Deployment to production')
        {
            steps{
                echo "the code is going to be deployed in this production environment: $PRODUCTION_ENVIRONMENT"
            }
        }
    }
}
    